@page
@model IndexModel
<form method="post">
    <div>
        <label for="year">Enter a Year:</label>
        <input type="number" id="year" name="year" min="1900" max="@DateTime.Now.Year + 1" required />
    </div>
    <div>
        <button type="submit">Submit</button>
        <button type="reset" onclick="clearImage()">Clear</button>
    </div>
</form>
<div>
    @if (Model.ZodiacSign != null)
    {
        <p>Zodiac Sign: @Model.ZodiacSign</p>
        <img id="zodiacImage" src="~/images/@(Model.ZodiacSign.ToLower()).png" alt="Zodiac Sign Image" />
    }
</div>

<script>
    function clearImage() {
        let imageElement = document.getElementById("zodiacImage");
        
        imageElement.src = ""; 
    }
</script>

