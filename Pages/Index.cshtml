@page
@model IndexModel
<form method="post">
    <div>
        <label for="year">Enter a Year:</label>
        <input type="number" id="year" name="year" min="1900" max="@DateTime.Now.Year + 1" required />
    </div>
    <div>
        <button type="submit">Submit</button>
        <button type="reset">Clear</button>
    </div>
</form>
<div>
    @if (Model.ZodiacSign != null)
    {
        <p>Zodiac Sign: @Model.ZodiacSign</p>
        <!-- Reference the images from the wwwroot folder using the webroot path -->
        <img src="~/images/@(Model.ZodiacSign.ToLower()).png" alt="Zodiac Sign Image" />

    }
</div>
